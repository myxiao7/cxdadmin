<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        style="@style/order_list_lin">
        <ImageView
            android:id="@+id/cus_list_item_icon_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/avator_default"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/cus_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/cus_list_item_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/cus_list_item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/cus_list_item_phone_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/ic_phone"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/order_list_lin"
        >
        <TextView
            android:id="@+id/cus_list_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/order_list_lin"
        >
        <TextView
            android:id="@+id/cus_list_item_color_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/order_list_lin"
        >
        <TextView
            android:id="@+id/cus_list_item_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额："
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/order_list_lin"
        >
        <TextView
            android:id="@+id/cus_list_item_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包数量："
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/order_list_lin"
        >
        <TextView
            android:id="@+id/cus_list_item_last_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最后点击红包时间："
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

</LinearLayout>